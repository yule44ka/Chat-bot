<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>org.example.chatBot</id>

  <name>Chat Bot</name>

  <vendor email="yulya.lyutova.04@gmail.com" url="TBA">Iuliia Liutova</vendor>

  <description>
    A plugin that provides a chat-based assistant for helping with code-related questions in IntelliJ IDEA.
  </description>

  <depends>com.intellij.modules.platform</depends>
  <depends>org.jetbrains.kotlin</depends>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="AI Chat Assistant"
      anchor="right"
      factoryClass="ChatToolWindowFactory"
      canCloseContents="true"
      canWorkInDumbMode="true"/>
  </extensions>
</idea-plugin>